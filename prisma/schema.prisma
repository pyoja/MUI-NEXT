datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model tbl_user {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String
  todos    Todo[]
}

model tbl_todo {
  id        Int     @id @default(autoincrement())
  text      String
  completed Boolean @default(false)
  user      User    @relation(fields: [userId], references: [id])
  userId    Int
}